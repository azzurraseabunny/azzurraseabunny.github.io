---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<div class="gif-container">
  <img src="/zurraheader.gif" alt="Centered GIF" class="centered-gif" />
  <div class="placeholder-box"></div>
</div>

<nav>
  <div class="internal-links">
    <HeaderLink href="/">Home</HeaderLink>
    <HeaderLink href="/blog">WORKS</HeaderLink>
    <HeaderLink href="/about">ABOUT</HeaderLink>
    <li>
      <a href="mailto:azzurraseabunny@gmail.com">Contact me here!</a>
    </li>
  </div>
</nav>

<style>
/* Centering the GIF container */
.gif-container {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  height: auto;
  max-width: 100%;
  padding: 20px;
}

/* Placeholder Box */
.placeholder-box {
  position: absolute;
  width: 100%;
  height: 100%;
  background-color: #26211e;
  z-index: 1;
}

/* Responsive GIF Styling */
.centered-gif {
  width: 100%;
  max-width: 100%;
  height: auto;
  position: relative;
  z-index: 2; /* Keeps the GIF above the placeholder */
  transition: transform 0.3s ease-in-out, filter 0.3s ease-in-out;
}

/* Hover effects */
.centered-gif:hover {
  filter: brightness(1.2);
}

/* Position the nav container to be in front of the GIF */
nav {
  position: absolute;
  top: 0;
  right: 0;
  z-index: 3; /* Ensure the nav is above the GIF */
  display: flex;
  justify-content: flex-end; /* Align buttons to the right */
  align-items: center;
  padding: 20px;
  margin: 0;
}

/* Styling for the internal links */
.internal-links {
  list-style: none;
  display: flex; /* Arrange buttons horizontally */
  padding: 0;
  margin: 0;
}

.internal-links li {
  margin: 0 8px; /* Reduced margin to bring buttons closer */
}

.internal-links a {
  padding: 0.25em 0.75em; /* Reduced padding for smaller buttons */
  color: white;
  background-color: #db3f23; /* Orange background for the buttons */
  border-radius: 5px;
  text-decoration: none;
  display: block;
  font-size: 0.9em; /* Reduced font size */
  transition: background-color 0.3s;
}

.internal-links a:hover {
  background-color: gray; /* Change background to gray on hover */
}
</style>
